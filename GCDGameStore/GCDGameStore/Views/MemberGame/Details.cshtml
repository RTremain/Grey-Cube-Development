@model GCDGameStore.ViewModels.MemberGameDetail

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<h2>View</h2>

<div>
    <h4>MemberGameDetail</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
    </dl>
    @if (Model.InLibrary)
    {
        <a asp-controller="MemberGame" asp-action="Download">Download Game</a>
    }
    else
    {
        <form asp-action="CreateLibraryItem">
            <button type="submit" name="GameId" value="@Model.MemberGameDetailId">Add To Library</button>
        </form>
        @if (Model.OnWishlist)
        {
            <form asp-action="DeleteWishlistItem">
                <button type="submit" name="GameId" value="@Model.MemberGameDetailId">Remove From Wishlist</button>
            </form>
        }
        else
        {
            <form asp-action="CreateWishlistItem">
                <button type="submit" name="GameId" value="@Model.MemberGameDetailId">Add To Wishlist</button>
            </form>
        }

        @if (!Model.OnCart)
        {
            <form asp-controller="Cart" asp-action="AddItem">
                <button type="submit" name="GameId" value="@Model.MemberGameDetailId">Add To Cart</button>
            </form>
        }
    }



