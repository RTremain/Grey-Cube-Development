    else
    {

    }

</div>
<div>
    <a asp-controller="Member" asp-action="Library">Return To Library</a> | 
    <a asp-controller="Member" asp-action="Wishlist">Return To Wishlist</a> | 
    <a asp-action="Index">Return To All Games</a>
</div>
