@model GCDGameStore.Models.Review

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<h2>Create</h2>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Recommended" /> @Html.DisplayNameFor(model => model.Recommended)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ReviewText" class="control-label"></label>
                <input asp-for="ReviewText" class="form-control" />
                <span asp-validation-for="ReviewText" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Approved" /> 
            <input type="hidden" asp-for="MemberId" />
            <input type="hidden" asp-for="GameId" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Member" asp-action="Library">Back to Library</a>
</div>

